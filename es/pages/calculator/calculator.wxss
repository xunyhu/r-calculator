/* pages/calculator/calculator.wxss */
.calculator {
  color: #333;
}

.title-wrap {
  padding-bottom: 12rpx;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
}

.title,
.activetitle {
  height: 110rpx;
  line-height: 110rpx;
  font-size: 32rpx;
  text-align: center;
  font-weight: 700;
  width: 33.3%;
}

.activetitle {
  color: #3072f6;
  position: relative;
}
.activetitle::after {
  position: absolute;
  content: "";
  width: 32rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #3072f6;
  bottom: 0;
  left: 50%;
  transform: translate(-50%);
}

.calc-item {
  height: 120rpx;
  margin: 0 48rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
}

.calc-left {
  font-weight: 700;
  width: 170rpx;
  color: #222;
}

.calc-right {
  margin-left: 32rpx;
  flex: 1;
  position: relative;
}

.calc-radio,
.radio-label {
  display: flex;
}

.calc-radio {
  justify-content: space-between;
}

.radio {
  transform: scale(0.8);
}

.clac-money {
  display: flex;
  justify-content: space-between;
}

.clac-right-icon {
  width: 20rpx;
  height: 20rpx;
  border: 1px solid #999;
  position: absolute;
  right: 2rpx;
  top: 50%;
  transform: translate(0, -50%) rotate(-45deg);
  border-top: none;
  border-left: none;
}


.calc-btn {
    padding: 80rpx 48rpx 0;
}

.calc-btn > .btns {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    background-color: #3072f6;
    border-radius: 10rpx;
}