/* pages/early_repay/index.wxss */
.early {
  color: #333;
}
.calc-item {
  height: 120rpx;
  margin: 0 48rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
}

.calc-left {
  font-weight: 700;
  width: 190rpx;
  color: #222;
}

.calc-right {
  margin-left: 32rpx;
  flex: 1;
  position: relative;
}

.calc-radio,
.radio-label {
  display: flex;
}

.calc-radio {
  justify-content: space-between;
}

.radio {
  transform: scale(0.8);
}

.clac-right-icon {
  width: 20rpx;
  height: 20rpx;
  border: 1px solid #999;
  position: absolute;
  right: 2rpx;
  top: 50%;
  transform: translate(0, -50%) rotate(-45deg);
  border-top: none;
  border-left: none;
}

.r-text {
  position: absolute;
  right: 2rpx;
  top: 50%;
  transform: translate(0, -50%);
}

.calc-btn {
  padding: 45rpx 48rpx 0;
}

.calc-btn > .btns {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: #3072f6;
  border-radius: 10rpx;
}

.picker-item {
  display: inline-block;
  border: 1rpx solid #eee;
  position: relative;
  width: 150rpx;
  text-align: center;
  height: 55rpx;
  line-height: 55rpx;
}
.picker-item .clac-right-icon {
  width: 15rpx;
  height: 15rpx;
  right: 10rpx;
  transform: translate(0, -70%) rotate(45deg);
}

.picker-mounth {
  width: 120rpx;
}

text {
  padding: 0 15rpx;
}
